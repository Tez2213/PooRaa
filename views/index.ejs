<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PooRaa</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar bg-body-tertiary">
      <form
        class="container-fluid justify-content-start"
        action="http://localhost:8080/posts/new"
      >
        <button class="btn btn-outline-success me-2" type="submit">
          Add Poo
        </button>
      </form>
    </nav>
    <h1 class="text-danger">PooRaa</h1>
    <div class="d-flex flex-wrap gap-3">
      <% for (let post of posts) { %>
      <div class="card" style="width: 18rem">
        <img src="<%= post.img %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= post.username %></h5>
          <p class="card-text"><%= post.content %></p>
          <a
            href="http://localhost:8080/posts/<%= post.id %>"
            class="btn btn-primary"
            >View</a
          >
          <a
            href="http://localhost:8080/posts/<%= post.id %>/edit"
            class="btn btn-primary"
            >Edit</a
          >
          <form method="POST" action="/posts/<%= post.id %>?_method=DELETE">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
